*.hh      text eol=lf
*.hpp     text eol=lf
*.rb      text eol=lf
*.cmake   text eol=lf
*.config  text eol=lf
*.conf    text eol=lf
*.install text eol=lf
*.json    text eol=lf
*.md      text eol=lf
*.sh      text eol=lf
*.txt     text eol=lf
*.xml     text eol=lf
*.yml     text eol=lf
